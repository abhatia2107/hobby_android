<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemOrderNumberTextView"
        android:padding="5dp"
        android:textSize="15dp"
        android:text="ORDER NUMBER : 1"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemPricePerSession"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:padding="5dp"
        android:textSize="8dp"
        android:text="Price Per Session: Rs.100/-"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemBookingDate"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:padding="5dp"
        android:textSize="8dp"
        android:text="Date : 14-05-2015      Time: 10:45am"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemOrderBookedForTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:padding="5dp"
        android:textSize="12dp"
        android:text="ORDER BOOKED FOR : 17 - 05 - 2015"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemNumberOfSession"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:padding="5dp"
        android:textSize="8dp"
        android:text="Total Number of Sessions : 5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ItemTotalPrice"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:padding="5dp"
        android:textSize="8dp"
        android:text="Total Price : Rs.500/-"/>
</LinearLayout>
