<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.hobbyix.hobbyix.MyProfile">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/xyz">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="My Profile"
            android:id="@+id/Title"
            android:textColor="@color/black"
            android:layout_gravity="center" />
        <View
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:background="#cd28b9ff"
            android:layout_below="@+id/Title"
            android:layout_marginBottom="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="NAME : "
            android:textColor="#e9a4a4a4"
            android:textSize="12dp"
            android:id="@+id/name"
            android:layout_below="@+id/header"
            android:layout_alignLeft="@+id/header"
            android:layout_alignStart="@+id/header"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MOBILE NUMBER :"
            android:textColor="#e9a4a4a4"
            android:textSize="12dp"
            android:id="@+id/mobile_number"
            android:layout_below="@+id/email_id"
            android:layout_alignLeft="@+id/email_id"
            android:layout_alignStart="@+id/email_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CITY : "
            android:id="@+id/city"
            android:textColor="#e9a4a4a4"
            android:textSize="12dp"
            android:layout_below="@+id/mobile_number"
            android:layout_alignLeft="@+id/mobile_number"
            android:layout_alignStart="@+id/mobile_number" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="EMAIL ID : "
            android:id="@+id/email_id"
            android:textColor="#e9a4a4a4"
            android:textSize="12dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/city"
            android:layout_alignLeft="@+id/city"
            android:layout_alignStart="@+id/city" />
    </LinearLayout>
</RelativeLayout>
