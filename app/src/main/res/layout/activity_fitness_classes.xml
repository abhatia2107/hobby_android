<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="in.hobbyix.hobbyix.FitnessClasses"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:fillViewport="false"
    android:id="@+id/ScrollView">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/Gym"
        android:scaleType="centerInside"
        android:background="@drawable/gym"
        android:layout_alignParentTop="true">
    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#4c000000"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_above="@+id/linearLayout2">
        <TextView
            android:id="@+id/InstituteName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Institute Name"
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/InstituteClassType"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Institute Categries"
            android:textSize="15dp"
            android:textColor="#ffffffff"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/InstituteAddressHeader"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Institute Address"
            android:textSize="13dp"
            android:textColor="#ffffffff"
            android:layout_marginLeft="25dp"
            android:typeface="sans"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1050dp"
        android:orientation="vertical"
        android:background="#fff0f3f6"
        android:weightSum="1"
        android:padding="5dp"
        android:layout_below="@+id/Gym"
        android:id="@+id/linearLayout2">

        <RelativeLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:background="#ffffffff"
            android:layout_height="280dp"
            android:id="@+id/View">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Book This Class"
                android:textColor="#ff000000"
                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#cd28b9ff"
                android:layout_below="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Price Per Session"
                android:textColor="#ff000000"
                android:textSize="15dp"
                android:paddingTop="15dp"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=": Rs.100"
                android:textSize="15dp"
                android:paddingTop="15dp"
                android:textColor="#ff000000"
                android:id="@+id/textView7"
                android:layout_above="@+id/textView8"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignEnd="@+id/textView4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sessions*"
                android:id="@+id/textView8"
                android:textSize="15dp"
                android:paddingTop="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#ff000000"
                android:layout_below="@+id/textView6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Booking Date*"
                android:paddingTop="15dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textColor="#ff000000"
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <EditText
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/editText"
                android:layout_marginTop="16dp"
                android:paddingLeft="7dp"
                android:hint="Enter Promo Code"
                android:background="@drawable/round_edit_text"
                android:textSize="15dp"
                android:layout_below="@+id/editText4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/editText4"
                android:layout_toLeftOf="@+id/editText4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:background="#cd2c58ff"
                android:textColor="#ffffffff"
                android:textSize="10dp"
                android:id="@+id/textView10"
                android:layout_alignBottom="@+id/editText"
                android:layout_alignRight="@+id/editText4"
                android:layout_alignEnd="@+id/editText4"
                android:layout_alignTop="@+id/editText"
                android:layout_toRightOf="@+id/textView7"
                android:layout_toEndOf="@+id/textView7" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#cd28b9ff"
                android:layout_below="@+id/textView10"
                android:id="@+id/View5" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Amount Payable: Rs. 100"
                android:textSize="16dp"
                android:id="@+id/textView11"
                android:layout_below="@+id/View5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="18dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:textSize="10dp"
                android:textColor="#ffffffff"
                android:background="#cd2c58ff"
                android:id="@+id/ProceedButton"
                android:layout_alignTop="@+id/textView11"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:hint="Select Date"
                android:background="@drawable/round_edit_text"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView9" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:hint="Select Sessions"
                android:textAlignment="center"
                android:textDirection="firstStrong"
                android:background="@drawable/round_edit_text"
                android:layout_above="@+id/textView9"
                android:layout_alignLeft="@+id/editText4"
                android:layout_alignStart="@+id/editText4"
                android:layout_alignRight="@+id/View5"
                android:layout_alignTop="@+id/textView8" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="45dp"
            android:padding="8dp"
            android:background="#ffffffff"

            android:id="@+id/Mmy">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Institute Details"
                android:textColor="@color/black"
                android:id="@+id/textView14"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#cd28b9ff"
                android:layout_below="@+id/textView10"
                android:id="@+id/View5" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/HomeImageView"
                android:background="@drawable/home"
                android:layout_below="@+id/View5"
                android:layout_marginTop="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Institute Address"
                android:textColor="@color/black"
                android:layout_below="@+id/View5"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:id="@+id/InstituteAddress"
                android:layout_marginLeft="25dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/HomeImageView"
                android:layout_marginTop="10dp"
                android:background="@drawable/location"
                android:id="@+id/imageView3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InstituteAddress"
                android:text="Institute Location"
                android:padding="5dp"
                android:id="@+id/LocationTextView"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/mobile"
                android:id="@+id/PhoneImageView"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LocationTextView"
                android:layout_marginLeft="25dp"
                android:text="Mobile Number"
                android:id="@+id/InstituteMobileNumberText"
                android:textColor="@color/black"
                android:padding="5dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/clock"
                android:id="@+id/imageView4"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/InstituteMobileNumberText"
                android:padding="5dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:text="Timings"
                android:id="@+id/textView" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#cd28b9ff"
                android:id="@+id/Header2"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/imageView4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:id="@+id/FacilitiesTextView"
                android:text="Facilities"
                android:layout_alignTop="@+id/Header2"
                android:layout_centerHorizontal="true" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#cd28b9ff"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/FacilitiesTextView"
                android:id="@+id/view5" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/view5"
                android:layout_alignRight="@+id/view5"
                android:layout_alignEnd="@+id/view5"
                android:id="@+id/FacilityLayout">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/AcImageView"
                    android:background="@drawable/ac"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Air Conditioner"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:padding="9dp"
                    android:id="@+id/textView15"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/AcImageView"
                    android:layout_toEndOf="@+id/AcImageView" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView5"
                    android:background="@drawable/shower"
                    android:layout_below="@+id/textView15"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Shower Room"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp"
                    android:textSize="12dp"
                    android:id="@+id/textView16"
                    android:padding="9dp"
                    android:layout_below="@+id/AcImageView"
                    android:layout_alignLeft="@+id/textView20"
                    android:layout_alignStart="@+id/textView20" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView6"
                    android:background="@drawable/cafe"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:padding="9dp"
                    android:text="Cafe Coffee"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:id="@+id/textView17"
                    android:layout_above="@+id/imageView8"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView7"
                    android:background="@drawable/steam"
                    android:layout_below="@+id/imageView8"
                    android:layout_alignLeft="@+id/imageView8"
                    android:layout_alignStart="@+id/imageView8" />


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView8"
                    android:background="@drawable/locker"
                    android:layout_below="@+id/imageView6"
                    android:layout_alignLeft="@+id/imageView6"
                    android:layout_alignStart="@+id/imageView6" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView9"
                    android:background="@drawable/change"
                    android:layout_below="@+id/textView19"
                    android:layout_toLeftOf="@+id/textView20"
                    android:layout_toStartOf="@+id/textView20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Steam Bath"
                    android:textColor="@color/black"
                    android:padding="9dp"
                    android:id="@+id/textView18"
                    android:textSize="12dp"
                    android:layout_below="@+id/imageView8"
                    android:layout_toRightOf="@+id/imageView7"
                    android:layout_toEndOf="@+id/imageView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Locker Room"
                    android:textSize="12dp"
                    android:padding="9dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:id="@+id/textView19"
                    android:layout_below="@+id/textView17"
                    android:layout_toRightOf="@+id/imageView6"
                    android:layout_toEndOf="@+id/imageView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Changing Room"
                    android:padding="9dp"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:id="@+id/textView20"
                    android:layout_below="@+id/imageView5"
                    android:layout_toRightOf="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5" />
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="45dp"
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Write a Review"
                android:textColor="#ff000000"
                android:id="@+id/textView12"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="#cd28b9ff"
                android:layout_below="@+id/textView10"
                android:id="@+id/View5" />

            <RatingBar
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_below="@+id/textView12"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Write your message here."
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="2000"
                android:maxLines="4"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textSize="14dp"
                android:gravity="top|left"
                android:background="@drawable/review_edit_text"
                android:id="@+id/editText3"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView13"
                android:layout_alignRight="@+id/View5"
                android:layout_alignEnd="@+id/View5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Review :"
                android:textSize="15dp"
                android:textColor="#ff000000"
                android:id="@+id/textView13"
                android:layout_below="@+id/ratingBar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="33dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Submit"
                android:textSize="10dp"
                android:background="#cd2c58ff"
                android:textColor="#ffffffff"
                android:id="@+id/SubmitButton"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>