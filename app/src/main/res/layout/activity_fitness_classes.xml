<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="in.hobbyix.hobbyix.FitnessClasses"
    android:layout_height="match_parent"
    layout_width="wrap_content"
    android:layout_width="wrap_content"
    android:fillViewport="false"
    android:id="@+id/ScrollView">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/Gym"
        android:background="@drawable/gym"
        android:layout_alignParentTop="true">

    </ImageView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#4cffffff"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/InstituteName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Institute Name"
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:typeface="sans"/>
        <TextView
            android:id="@+id/InstituteName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Institute Categries"
            android:textSize="15dp"
            android:textColor="#ffffffff"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/InstituteName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Institute Address"
            android:textSize="13dp"
            android:textColor="#ffffffff"
            android:layout_marginLeft="25dp"
            android:typeface="sans"/>
        <TextView
            android:id="@+id/InstituteName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Institute Timings"
            android:textSize="13dp"
            android:layout_marginLeft="25dp"
            android:textColor="#ffffffff"
            android:typeface="sans"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:layout_marginTop="200dp">
    </LinearLayout>


</RelativeLayout>
</ScrollView>