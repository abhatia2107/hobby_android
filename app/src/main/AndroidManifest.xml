<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.hobbyix.hobbyix" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MaterialDark" >
        <activity
            android:name=".SpalshScreen"
            android:label="@string/title_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_main" >
            <intent-filter>
                <action android:name="in.hobbyix.hobbyix.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SamplePage"
            android:label="@string/title_main"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.hobbyix.hobbyix.MainActivity" />
        </activity>
        <activity
            android:name=".FilterPage"
            android:label="@string/title_main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.hobbyix.hobbyix.SamplePage" />
        </activity>
        <activity
            android:name=".MyProfile"
            android:label="@string/title_main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.hobbyix.hobbyix.SamplePage" />
        </activity>
        <activity
            android:name=".MyOrders"
            android:label="@string/title_main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.hobbyix.hobbyix.SamplePage" />
        </activity>
        <activity
            android:name=".ChangePassword"
            android:label="@string/title_main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.hobbyix.hobbyix.SamplePage" />
        </activity>
        <activity
            android:name=".PaymentPage"
            android:label="@string/title_activity_payment_page" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_main" >
        </activity>
        <activity
            android:name=".ForgotPassword"
            android:label="@string/title_activity_forgot_password" >
        </activity>
    </application>
</manifest>
